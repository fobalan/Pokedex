<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.flavio.pokedex">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pikachu_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/pikachu_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
        android:name="br.com.flavio.pokedex.core.PokedexApplication">

        <activity
            android:name=".SplashScreenActivity"
            android:label="@string/title_activity_pokedex_detail">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".feature.pokedexdetail.ui.PokedexDetailActivity"
            android:label="@string/title_activity_pokedex_detail">
        </activity>
        <activity android:name=".feature.pokedexlist.ui.PokedexListActivity"/>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>